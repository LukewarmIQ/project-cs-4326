<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!-- App Name TextView -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            android:lineSpacingExtra="8dp"
            android:padding="16dp"
            android:elevation="4dp"
            android:scaleX="1.2"
            android:scaleY="1.2"/>

        <!-- Sound Effects ToggleButton -->
        <ToggleButton
            android:id="@+id/sound_toggle"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:text="Sound Effects"
            android:background="@drawable/custom_toggle"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <!-- Gallery and Results Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_button"
                android:text="@string/use_file"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingVertical="12dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/results"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/custom_button"
                android:text="@string/view_past_results"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingVertical="12dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Camera Button -->
    <Button
        android:id="@+id/camera"
        android:layout_width="343dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_button"
        android:drawableLeft="@drawable/ic_camera"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="30dp"
        android:paddingVertical="16dp"
        android:text="@string/use_camera"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

</RelativeLayout>
